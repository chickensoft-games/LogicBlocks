{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "prHourlyLimit": 2,
  "versioning": "loose",
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "groupName": "all dependencies",
      "groupSlug": "all-deps",
      "automerge": true,
      "allowedVersions": "!/(preview|final)/"
    },
    {
      "matchPackagePrefixes": [
        "dotnet-sdk"
      ],
      "allowedVersions": "/^$/"
    },
    {
      "matchPackagePrefixes": [
        "GodotSharp",
        "Godot.NET.Sdk"
      ],
      "allowedVersions": "/^$/"
    },
    {
      "matchPackagePrefixes": [
        "Chickensoft"
      ],
      "allowedVersions": "/^(\\d+\\.\\d+\\.\\d+)(-godot(\\d+\\.)+\\d+(-.*)?)?$/"
    }
  ]
}
